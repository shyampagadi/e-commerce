# ðŸ”§ E-Commerce Application Environment Configuration
# Copy this file to .env and update the values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://postgres:admin@database:5432/ecommerce_db
POSTGRES_DB=ecommerce_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=admin

# ===========================================
# APPLICATION SECURITY
# ===========================================
SECRET_KEY=your-super-secret-key-change-this-in-production-make-it-long-and-random
DEBUG=false
ENVIRONMENT=development

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_API_BASE_URL=http://localhost:8000/api/v1

# ===========================================
# BACKEND CORS CONFIGURATION
# ===========================================
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://127.0.0.1:3000"]

# ===========================================
# PRODUCTION SETTINGS (Update for production)
# ===========================================
# DATABASE_URL=postgresql://user:password@your-db-host:5432/ecommerce_prod
# SECRET_KEY=your-production-secret-key-64-characters-long-random-string
# DEBUG=false
# ENVIRONMENT=production
# REACT_APP_API_URL=https://api.yourdomain.com
# BACKEND_CORS_ORIGINS=["https://yourdomain.com"]

