{
  "dashboard": {
    "id": null,
    "title": "Chaos Engineering Monitoring Dashboard",
    "tags": ["chaos-engineering", "monitoring", "ecommerce"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Chaos Experiment Status",
        "type": "stat",
        "targets": [
          {
            "expr": "chaos_experiment_active",
            "legendFormat": "Active Experiments",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 2
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Pod Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "kube_pod_status_phase{phase=\"Running\"}",
            "legendFormat": "Running Pods",
            "refId": "A"
          },
          {
            "expr": "kube_pod_status_phase{phase=\"Pending\"}",
            "legendFormat": "Pending Pods",
            "refId": "B"
          },
          {
            "expr": "kube_pod_status_phase{phase=\"Failed\"}",
            "legendFormat": "Failed Pods",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 2
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Service Endpoints",
        "type": "stat",
        "targets": [
          {
            "expr": "kube_endpoint_address_available",
            "legendFormat": "Available Endpoints",
            "refId": "A"
          },
          {
            "expr": "kube_endpoint_address_not_ready",
            "legendFormat": "Not Ready Endpoints",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 2
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Resource Usage",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total[5m])",
            "legendFormat": "CPU Usage",
            "refId": "A"
          },
          {
            "expr": "container_memory_usage_bytes",
            "legendFormat": "Memory Usage",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 0.8
                },
                {
                  "color": "red",
                  "value": 0.95
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Application Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th Percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50th Percentile",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time (seconds)",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "5xx Errors",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{status=~\"4..\"}[5m])",
            "legendFormat": "4xx Errors",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Error Rate (requests/second)",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 7,
        "title": "Network Connectivity",
        "type": "graph",
        "targets": [
          {
            "expr": "probe_success",
            "legendFormat": "Connectivity Success",
            "refId": "A"
          },
          {
            "expr": "probe_duration_seconds",
            "legendFormat": "Connection Duration",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Connectivity Status",
            "min": 0,
            "max": 1
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 32
        }
      },
      {
        "id": 8,
        "title": "Storage Health",
        "type": "stat",
        "targets": [
          {
            "expr": "kube_persistentvolume_status_phase{phase=\"Bound\"}",
            "legendFormat": "Bound Volumes",
            "refId": "A"
          },
          {
            "expr": "kube_persistentvolume_status_phase{phase=\"Available\"}",
            "legendFormat": "Available Volumes",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 2
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 40
        }
      },
      {
        "id": 9,
        "title": "Monitoring System Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"prometheus\"}",
            "legendFormat": "Prometheus",
            "refId": "A"
          },
          {
            "expr": "up{job=\"grafana\"}",
            "legendFormat": "Grafana",
            "refId": "B"
          },
          {
            "expr": "up{job=\"alertmanager\"}",
            "legendFormat": "AlertManager",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 40
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s",
    "schemaVersion": 27,
    "version": 1,
    "links": [],
    "gnetId": null,
    "uid": "chaos-monitoring-dashboard"
  }
}
